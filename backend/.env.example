# Umgebungsvariablen f체r AI File Manager Backend

# Server-Konfiguration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Sicherheit
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_SALT_ROUNDS=10

# Datenbank
DATABASE_PATH=./database.db

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# Cloudflare R2 Storage (optional)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_FILES_PER_UPLOAD=10

# Session-Konfiguration
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT=86400000  # 24 Stunden in Millisekunden

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email (f체r zuk체nftige Features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 Minuten in Millisekunden
RATE_LIMIT_MAX_REQUESTS=100

# Backup-Konfiguration (optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # T채glich um 2 Uhr morgens
BACKUP_RETENTION_DAYS=7
